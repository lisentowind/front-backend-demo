  "scripts": {
    "dev:mac": "concurrently \"pnpm run front-dev\" \"pnpm run backend-dev\"",
    "dev:windows": "concurrently \"pnpm run front-dev\" \"pnpm run backend-dev:windows\"",
    "front-dev": "cd front && pnpm dev",
    "backend-dev": "./run-backend.sh",
    "backend-dev:setup": "./setup-air.sh && ./run-backend.sh",
    "backend-dev:windows": "cd backend && air -c .air.windows.toml",
    "backend-dev:mac": "./run-backend.sh",
    "backend-dev:linux": "./run-backend.sh"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
